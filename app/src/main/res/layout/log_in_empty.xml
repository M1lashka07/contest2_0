<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".log_in">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="268dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="635dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginEnd="107dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Welcome Back"
            android:textColor="#3A3A3A"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="268dp"
            android:layout_height="16dp"
            android:layout_marginTop="38dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Fill in your email and password to continue"
            android:textColor="#A7A7A7"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="351dp"
        android:layout_height="162dp"
        android:layout_marginTop="229dp"
        android:layout_marginBottom="455dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout5"
            android:layout_width="342dp"
            android:layout_height="68dp"
            android:layout_marginBottom="92dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="91dp"
                android:layout_height="16dp"
                android:layout_marginEnd="251dp"
                android:layout_marginBottom="52dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Email Address"
                android:textColor="#A7A7A7"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:layout_width="342dp"
                android:layout_height="44dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/shape_label"
                android:fontFamily="@font/roboto_medium"
                android:hint="   ***********@mail.ru"
                android:textColor="#CFCFCF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="342dp"
            android:layout_height="68dp"
            android:layout_marginTop="92dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="63dp"
                android:layout_height="16dp"
                android:layout_marginEnd="279dp"
                android:layout_marginBottom="52dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Password"
                android:textColor="#A7A7A7"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="342dp"
                android:layout_height="44dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/shape_label"
                android:fontFamily="@font/roboto_medium"
                android:hint="   **********"
                android:textColor="#CFCFCF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/hint_pass_sign_up"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="318dp"
                android:layout_marginTop="39dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/is_hint_pass"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="342dp"
        android:layout_height="16dp"
        android:layout_marginTop="406dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="422dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="328dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/shape_cbox_login_empty"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="116dp"
            android:layout_height="16dp"
            android:layout_marginEnd="208dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Remember password"
            android:textAlignment="center"
            android:textColor="#A7A7A7"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="99dp"
            android:layout_height="16dp"
            android:layout_marginStart="243dp"
            android:text="Forgot Password?"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#0560FA"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="342dp"
        android:layout_height="82dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="153dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="609dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.widget.Button
            android:id="@+id/button"
            android:layout_width="342dp"
            android:layout_height="46dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/shape_button_empty"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="16dp"
            android:layout_marginTop="66dp"
            android:layout_marginStart="68.5dp"
            android:layout_marginEnd="113.5dp"
            android:text="Already have an account?"
            android:textSize="14sp"
            android:textColor="#A7A7A7"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="49dp"
            android:layout_height="16dp"
            android:layout_marginEnd="68.5dp"
            android:layout_marginTop="66dp"
            android:layout_marginStart="230.5dp"
            android:text="Sign up"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#0560FA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_marginStart="146dp"
        android:layout_marginTop="830dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="95dp"
            android:layout_height="16dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/roboto_regular"
            android:text="or log in using"
            android:textAlignment="center"
            android:textColor="#A7A7A7"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/is_google_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>