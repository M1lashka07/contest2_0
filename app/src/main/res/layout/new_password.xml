<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".new_password">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="161dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="205dp"
        android:layout_marginTop="155dp"
        android:layout_marginBottom="635dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="161dp"
            android:layout_height="30dp"
            android:layout_marginBottom="24dp"
            android:text="New Password"
            android:textSize="24sp"
            android:textColor="#3A3A3A"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="16dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="33dp"
            android:text="Enter new password"
            android:textSize="14sp"
            android:textColor="#A7A7A7"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="351dp"
        android:layout_height="160dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="279dp"
        android:layout_marginBottom="405dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="351dp"
            android:layout_height="68dp"
            android:layout_marginBottom="92dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="63dp"
                android:layout_height="16dp"
                android:layout_marginEnd="279dp"
                android:layout_marginBottom="52dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Password"
                android:textColor="#A7A7A7"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="342dp"
                android:layout_height="44dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/shape_label_default"
                android:fontFamily="@font/roboto_medium"
                android:hint="   **********"
                android:textColorHint="#CFCFCF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/hint_pass_sign_up"
                tools:ignore="ContentDescription"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="318dp"
                android:layout_marginTop="39dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/is_hint_pass"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout7"
            android:layout_width="351dp"
            android:layout_height="68dp"
            android:layout_marginTop="92dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="117dp"
                android:layout_height="16dp"
                android:layout_marginEnd="226dp"
                android:layout_marginBottom="52dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Confirm Password"
                android:textColor="#A7A7A7"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:layout_width="342dp"
                android:layout_height="44dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/shape_label_default"
                android:fontFamily="@font/roboto_medium"
                android:hint="   **********"
                android:textColorHint="#CFCFCF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/hint_confirm_pass_sign_up"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="318dp"
                android:layout_marginTop="39dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/is_hint_pass"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <android.widget.Button
        android:layout_width="342dp"
        android:layout_height="46dp"
        android:layout_marginTop="510dp"
        android:layout_marginBottom="288dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Log in"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_bold"
        android:background="@drawable/shape_button_empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>