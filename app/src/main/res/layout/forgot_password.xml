<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="184dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="182dp"
        android:layout_marginTop="155dp"
        android:layout_marginBottom="635dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="184dp"
            android:layout_height="30dp"
            android:layout_marginBottom="24dp"
            android:text="Forgot Password"
            android:textSize="24sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#3A3A3A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="156dp"
            android:layout_height="16dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="27dp"
            android:text="Enter your email address"
            android:textSize="14sp"
            android:textColor="#A7A7A7"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="342dp"
        android:layout_height="68dp"
        android:layout_marginBottom="511dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="265dp"
        android:layout_marginStart="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="91dp"
            android:layout_height="16dp"
            android:layout_marginEnd="251dp"
            android:layout_marginBottom="52dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Email Address"
            android:textColor="#A7A7A7"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_width="342dp"
            android:layout_height="44dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/shape_label_default"
            android:fontFamily="@font/roboto_medium"
            android:hint="   ***********@mail.ru"
            android:textColorHint="#CFCFCF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="342dp"
        android:layout_height="82dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="373dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="389dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.widget.Button
            android:id="@+id/button"
            android:layout_width="342dp"
            android:layout_height="46dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/shape_button_empty"
            android:text="Send OTP"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="191dp"
            android:layout_height="16dp"
            android:layout_marginTop="66dp"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="98dp"
            android:text="Remember password? Back to"
            android:textSize="14sp"
            android:textColor="#A7A7A7"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="43dp"
            android:layout_height="16dp"
            android:layout_marginEnd="54dp"
            android:layout_marginTop="66dp"
            android:layout_marginStart="245dp"
            android:text="Sign in"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#0560FA"
            android:id="@+id/sign_in_forgot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>